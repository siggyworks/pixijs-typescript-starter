{
	"compilerOptions": {
		"target": "es2016",
		"module": "es6",
		"strict": true,
		"noImplicitAny": false,
		"noEmit": true,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
        "lib": [
            "es2017",
            "dom"
        ],
		"sourceMap": true,
		"baseUrl": "./src",
		// "paths": {
		//   "~/*": ["./*"]
		// },
		"typeRoots": [
			"node_modules/@types",
			"node_modules/pixi.js"
		],
		"types": [
			"jest",
			"pixi.js"
		]
	},
	"include": [
		"src/**/*",
        "node_modules/@types"
	]
}